#!/bin/bash
COMMAND=$1
ENVIRONMENT=$2

if [ "$COMMAND" == "setup" ]; then
    if [ "$ENVIRONMENT" == "" ]; then
        go run db/setup/setup.go
    else
        go run db/setup/setup.go $ENVIRONMENT
    fi
elif [ "$COMMAND" == "migrate" ]; then
    if [ "$ENVIRONMENT" == "" ]; then
        go run db/migrations/migrations.go
    else
        go run db/migrations/migrations.go $ENVIRONMENT
    fi
elif [ "$COMMAND" == "seed" ]; then
    if [ "$ENVIRONMENT" == "" ]; then
        go run db/seeds/seeds.go
    else
        go run db/seeds/seeds.go $ENVIRONMENT
    fi
else
    echo "Invalid command"
fi

